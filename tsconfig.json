{
  "compilerOptions": {
    "outDir": "./dist", // Directory where compiled files will be placed
    "rootDir": "./src", // Root directory of your TypeScript source files
    "target": "ES6", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references
  },
  "include": ["src/**/*"] // Specifies the files to be included
}
